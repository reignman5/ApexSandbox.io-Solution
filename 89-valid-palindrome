public Boolean isPalindrome(String str){
    String decodedJson = (String)JSON.deserialize(str.toLowerCase(), String.class);
    List<String> splitString = decodedJson.split('');
    Boolean isPalindrome = true;
    for (Integer i = 0; i < splitString.size(); i++) {
        if(splitString[i] != splitString[splitString.size()-1-i]){
            isPalindrome = false;
        }
    }
    return isPalindrome;
}